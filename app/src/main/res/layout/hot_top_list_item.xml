<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/hot_list_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon_home"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/hot_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="名称"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/hot_list_icon"/>
    <TextView
        android:id="@+id/hot_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hot_list_icon"
        android:layout_centerVertical="true"
        android:text="类型:"/>
    <TextView
        android:id="@+id/type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hot_type"
        android:layout_centerVertical="true"
        android:text="类型:"/>
    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hot_list_icon"
        android:layout_toRightOf="@+id/hot_list_icon"
        android:layout_marginBottom="3dp"
        android:text="大小:"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/hot_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hot_list_icon"
        android:layout_toRightOf="@+id/size"
        android:layout_marginBottom="3dp"
        android:text="2015-12-12"/>

    <TextView
        android:id="@+id/hot_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:text="人在玩"/>

    <TextView
        android:id="@+id/hot_num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="q23132"
        android:textColor="@color/main_titel_bg"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/hot_num"/>

</RelativeLayout>