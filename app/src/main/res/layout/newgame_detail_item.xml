<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp">

    <ImageView
        android:id="@+id/newgame_item_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/newgame_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/newgame_item_icon"
        android:text="礼包名称"/>
    <TextView
        android:id="@+id/newgame_item_typesss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/newgame_item_icon"
        android:layout_below="@+id/newgame_item_name"
        android:textSize="14sp"
        android:textColor="@color/graiv"
        android:layout_margin="5dp"
        android:text="类型:"/>
    <TextView
        android:id="@+id/newgame_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/newgame_item_typesss"
        android:layout_below="@+id/newgame_item_name"
        android:textSize="14sp"
        android:textColor="@color/graiv"
        android:layout_margin="5dp"
        android:text="类型"/>

    <TextView
        android:id="@+id/newgame_item_sizessssssss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/newgame_item_type"
        android:layout_below="@+id/newgame_item_name"
        android:textSize="14sp"
        android:textColor="@color/graiv"
        android:layout_margin="5dp"
        android:text="大小："/>
    <TextView
        android:id="@+id/newgame_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/newgame_item_sizessssssss"
        android:layout_below="@+id/newgame_item_name"
        android:textSize="14sp"
        android:textColor="@color/graiv"
        android:layout_margin="5dp"
        android:text="大小："/>
    <TextView
        android:id="@+id/newgame_item_shengyu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_margin="5dp"
        android:singleLine="true"
        android:textColor="@color/graiv"
        android:layout_toRightOf="@+id/newgame_item_icon"
        android:layout_below="@+id/newgame_item_type"
        android:text="剩余:"/>


    <Button
        android:id="@+id/newgame_item_getnow"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="下载"
        android:padding="5dp"
        android:textSize="14sp"
        android:textColor="@color/whilt"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/main_titel_bg"/>

</RelativeLayout>