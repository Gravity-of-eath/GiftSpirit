<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yaokun.giftspirit.activity.SearchActivity">
    <RelativeLayout
        android:id="@+id/search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@color/main_titel_bg"
        >
        <ImageView
            android:id="@+id/search_toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"/>
        <AutoCompleteTextView
            android:id="@+id/search_toolbar_searchview"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:completionThreshold="1"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:background="@color/whilt"
            android:textSize="18sp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/search_toolbar_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_search"
            android:layout_centerVertical="true"
            android:layout_alignRight="@id/search_toolbar_searchview"/>
        <TextView
            android:id="@+id/main_toolbar_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textColor="@color/whilt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="16sp"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_toolbar">

    </ListView>
</RelativeLayout>
