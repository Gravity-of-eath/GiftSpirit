<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/wed_detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:background="@color/main_titel_bg">

                <ImageView
                    android:id="@+id/wed_detail_toolbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/wed_detail_toolbar_titel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/titel_name"
                    android:textColor="@color/whilt"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/wed_detail_toolbar_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@android:drawable/ic_menu_share" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_below="@id/wed_detail_toolbar"
                >
                <ImageView
                    android:id="@+id/wed_detail_icon"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/wed_g_biao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/wed_detail_icon"
                    android:layout_margin="8dp"
                    android:src="@drawable/g_biao" />

                <TextView
                    android:id="@+id/wed_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/wed_detail_icon"
                    android:layout_marginBottom="6dp"
                    android:layout_toRightOf="@id/wed_g_biao"
                    android:text="time"
                    android:textColor="@color/whilt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wed_detail_icon"
                    android:text="导读:" />

                <TextView
                    android:id="@+id/wed_detail_daodu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wed_detail_icon"
                    android:text="              asdafdasdadad"
                    android:textColor="@color/graiv" />

                <com.yaokun.giftspirit.activity.MyGridView
                    android:id="@+id/wed_detail_gv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/wed_detail_daodu"
                    android:numColumns="4">

                </com.yaokun.giftspirit.activity.MyGridView>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>